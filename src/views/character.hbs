<html>
  <body id="body-pd">
    <header class="header" id="header">
      <div class="header_toggle">
        <i class="bx bx-menu" id="header-toggle"></i>
      </div>
      <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      />
              <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
      <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
      />
      <link rel="stylesheet" href="../../css/modales.css">
      <link rel="stylesheet" href="../../home.css" />
      <link rel="stylesheet" href="../../home1.css" />
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div> <a href="/" class="nav_logo"> <i class='bx bx-home nav_logo-icon'></i> <span class="nav_logo-name">GTARG</span> </a>
                <div class="nav_list"> <a href="/" class="nav_link"> <i class='bx bx-grid-alt nav_icon'></i> <span class="nav_name">Inicio</span> </a>
             <a href="#" class="nav_link active" aria-disabled="true"> <i class='bx bx-user nav_icon'></i> <span class="nav_name">Personajes</span> </a>  </div>
                <a href="/home" class="nav_link"> <i class='bx bx-bitcoin nav_icon'></i> <span class="nav_name">NobaCoins: {{nobacoins}}</span> </a> 
                <a href="https://discord.gg/gtarg" class="nav_link"> <i class='bx bx-help-circle'></i> <span class="nav_name">Ayuda</span> </a>  </div> 
                
            <a href="/logout" class="nav_link"> <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">SignOut</span> </a>
        </nav>
    </div>
    <!--Container Main start-->

    <div class="main">

      <div class="tabs">
        <button class="tablink" onclick="openTab('estadisticas')">Estadísticas</button>
        <button class="tablink" onclick="openTab('vehiculos')">Vehículos</button>
        <button class="tablink" onclick="openTab('facciones')">Facciones</button>
        <button class="tablink" onclick="openTab('trabajo')">Trabajo</button>
    </div>
          {{#if success}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <strong>INFO:</strong> {{success}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{else}}
{{#if message}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <strong>Error:</strong> {{message}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}
{{/if}}
    <div id="estadisticas" class="tabcontent">
      <div class="character-stats">
          <div class="stat">
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 16h-2v-2h2v2zm0-4h-2V7h2v7z"/>
          </svg>
            <img src="../../skins/{{personaje.skin}}.png">
        </div>
          <div class="stat">
            <a id="openModalBtn" href="#">
      <span><i class='bx bxs-edit-alt'></i></span></a>
              <p><strong style="color: aliceblue;">Nombre:</strong> {{personaje.characterName}}</p>
              <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 16h-2v-2h2v2zm0-4h-2V7h2v7z"/>
            </svg>
            <p><strong style="color: aliceblue;">Nivel:</strong> {{personaje.nivel}}</p>
          </div>

          <div class="stat">
              <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 16h-2v-2h2v2zm0-4h-2V7h2v7z"/>
              </svg>
              <p><strong style="color: aliceblue;">Horas:</strong> {{personaje.horas}}</p>
              <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 16h-2v-2h2v2zm0-4h-2V7h2v7z"/>
            </svg>
            <p><strong style="color: aliceblue;">Vida:</strong> {{personaje.health}}%</p>
          </div>
          <div class="stat">
                   <a id="openModalBtn1" href="#">
      <span><i class='bx bxs-edit-alt'></i></span></a>
              <p><strong style="color: aliceblue;">Dinero en mano:</strong> ${{personaje.money}}</p>
              <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 16h-2v-2h2v2zm0-4h-2V7h2v7z"/>
            </svg>
            <p><strong style="color: aliceblue;" >Dinero en banco:</strong> ${{personaje.banco}}</p>
          </div>
      </div>
  </div>
  
<div id="vehiculos" class="tabcontent">   
    <h2 style="color:aliceblue;">Tus vehículos</h2>
    {{#if autos.length}}
        {{#each autos}}
            <div class="vehicle-stats">
                <div class="stat1">
                    <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 16h-2v-2h2v2zm0-4h-2V7h2v7z"/>
                    </svg>
                    <img src="../../autos/{{model}}.png">
                </div>
                <div class="stat1">
                    <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 16h-2v-2h2v2zm0-4h-2V7h2v7z"/>
                    </svg>
                    <p><strong>Modelo:</strong> {{model}}</p>
                </div>
                <div class="stat1">
                    <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 16h-2v-2h2v2zm0-4h-2V7h2v7z"/>
                    </svg>
                    <p><strong>Estado:</strong> {{health}}</p>
                </div>
                <div class="stat1">
                    <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 16h-2v-2h2v2zm0-4h-2V7h2v7z"/>
                    </svg>
                    <p><strong>Placa:</strong> {{numberplate}}</p>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p style="color: aliceblue;">No tienes vehículos registrados.</p>
    {{/if}}
</div>


  
<div id="facciones" class="tabcontent">
      <h2 style="color:aliceblue;">Tu facción</h2>
    {{#if faction.length}}
        {{#each faction}}
  <div class="character-stats">
    <div class="stat">
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 16h-2v-2h2v2zm0-4h-2V7h2v7z"/>
      </svg>
  {{#gt factionID 24}} 
        <img src="../../logosfacc/25.png" style="width: 200px;">
    {{/gt}}
  {{#ht factionID 9}}
      <img src="../../logosfacc/{{factionID}}.png" style="width: 200px;">
  {{/ht}}
  {{#ifEquals factionID 9}} 
      <img src="../../logosfacc/{{factionID}}.png" style="width: 200px;">
  {{/ifEquals}}
    {{#ifEquals factionID 10}} 
        <img src="../../logosfacc/{{factionID}}.png" style="width: 200px;">
  {{/ifEquals}}
    {{#ifEquals factionID 12}} 
        <img src="../../logosfacc/{{factionID}}.png" style="width: 200px;">
  {{/ifEquals}}
    {{#ifEquals factionID 15}} 
      <img src="../../logosfacc/{{factionID}}.png" style="width: 200px;">
  {{/ifEquals}}
    </div>
    <div class="stat">
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 16h-2v-2h2v2zm0-4h-2V7h2v7z"/>
      </svg>
      <p><strong>Facción ID:</strong> {{factionID}}</p>
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 16h-2v-2h2v2zm0-4h-2V7h2v7z"/>
      </svg>
      <p><strong>Rango:</strong> {{factionRank}}</p>
    </div>
      </div>
        {{/each}}
    {{else}}
        <p style="color:aliceblue;">No estás en una facción.</p>
    {{/if}}

</div>

  
<div id="trabajo" class="tabcontent">
    <h2 style="text-align: center; color:aliceblue;">Trabajo {{personaje.job}}</h2>
      <p style="text-align: center; color:aliceblue;"><strong>Trabajas en:</strong> {{personaje.job}}</p>
</div>
<div class="modal1" id="myModal1">
        <div class="modal-content">
            <span class="close" id="closeModalBtn">&times;</span>
            <h2>Cambiar de nombre</h2>
           <form method="post" action="/character/{{personaje.characterID}}/newname">
            <input type="text" name="nuevonombre" placeholder="Coloca tu nuevo nombre (Nombre Apellido)" required>
            <br>  <br>
            <input type="checkbox" id="checkbox1"> <strong>Acepto los términos y condiciones del servidor</strong>
            <br>
            <button type="submit" id="submitButton1" disabled>Comprar (5 NobaCoins)</button>
           </form>
        </div>
</div>
<div class="modal1" id="myModal2">
    <div class="modal-content">
        <span class="close" id="closeModalBtn1">&times;</span>
        <h2>Comprar dinero</h2>
        <table>
            <tr>
                <th>Cantidad de Dinero</th>
                <th>Costo en NobaCoins</th>
            </tr>
            <tr>
                <td>125,000</td>
                <td>3</td>
            </tr>
            <tr>
                <td>350,000</td>
                <td>5</td>
            </tr>
            <tr>
                <td>550,000</td>
                <td>7</td>
            </tr>
            <tr>
                <td>750,000</td>
                <td>10</td>
            </tr>
            <tr>
                <td>1,000,000</td>
                <td>12</td>
            </tr>
            <tr>
                <td>1,750,000</td>
                <td>15</td>
            </tr>
            <tr>
                <td>3,500,000</td>
                <td>25</td>
            </tr>
            <tr>
                <td>8,000,000</td>
                <td>50</td>
            </tr>
        </table>
        <form method="post" action="/character/{{personaje.characterID}}/money">
            <label for="coinAmount">Selecciona la cantidad de Coins:</label>
            <select name="coinAmount" id="coinAmount" required>
                <option value="3">3 Coins (125,000)</option>
                <option value="5">5 Coins (350,000)</option>
                <option value="7">7 Coins (550,000)</option>
                <option value="10">10 Coins (750,000)</option>
                <option value="12">12 Coins (1,000,000)</option>
                <option value="15">15 Coins (1,750,000)</option>
                <option value="25">25 Coins (3,500,000)</option>
                <option value="50">50 Coins (8,000,000)</option>
            </select>
            <br><br>
            <input type="checkbox" id="checkbox2"> <strong>Acepto los términos y condiciones del servidor</strong>
            <br>
            <button type="submit" id="submitButton2" disabled>Comprar</button>
        </form>
    </div>
</div>
    <!--Container Main end-->
    <script src="../../index.js"></script>
    <script>
 const openModalBtn = document.getElementById('openModalBtn');
const closeModalBtn = document.getElementById('closeModalBtn');
const modal1 = document.getElementById('myModal1');

openModalBtn.addEventListener('click', () => {
    modal1.style.display = 'block';
});

closeModalBtn.addEventListener('click', () => {
    modal1.style.display = 'none';
});
const checkbox1 = document.getElementById('checkbox1');
const submitButton2 = document.getElementById('submitButton1');

// Agrega un evento de cambio al checkbox
checkbox1.addEventListener('change', function() {
    // Habilita o deshabilita el botón según el estado del checkbox
    submitButton2.disabled = !this.checked;
});

// aASDSADASDASDSADSDA

const openModalBtn1 = document.getElementById('openModalBtn1');
const closeModalBtn1 = document.getElementById('closeModalBtn1');
const modal2 = document.getElementById('myModal2');

openModalBtn1.addEventListener('click', () => {
    modal2.style.display = 'block';
});

closeModalBtn1.addEventListener('click', () => {
    modal2.style.display = 'none';
});
const checkbox2 = document.getElementById('checkbox2');
const submitButton3 = document.getElementById('submitButton2');

// Agrega un evento de cambio al checkbox
checkbox2.addEventListener('change', function() {
    // Habilita o deshabilita el botón según el estado del checkbox
    submitButton3.disabled = !this.checked;
});
    </script>

    
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
